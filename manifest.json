{
    "name": "Tabby"
    ,"version":"2.0"
    ,"manifest_version":2
    ,"description":"__MSG_desc__"
    ,"browser_action": {
        "default_icon":"assets/16.png"
        ,"default_title":"Tabby"
        ,"default_popup":"popup.html"
    }
    ,"icons":{
        "16":"assets/16.png"
        ,"48":"assets/48.png"
        ,"128":"assets/128.png"
    }

    ,"background": {
        "page":"background.html"
    }
    ,"content_scripts": [
        {
            "matches": [ "*://*/*" ]
            ,"js": ["js/shortcut.js","js/content.js"]
        }
    ]
    ,"default_locale":"en"
    ,"options_page": "options.html"
    ,"permissions": [
        "storage"
        ,"bookmarks"
        ,"contextMenus"
        ,"tabs"
        ,"notifications"
        ,"http://*/"
        ,"https://*/"
        ,"chrome://favicon/"
    ]
    ,"web_accessible_resources": ["assets/48.png"]
}
